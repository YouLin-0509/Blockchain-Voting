{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "hardhat/config", "@nomicfoundation/hardhat-toolbox"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.tsx",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 